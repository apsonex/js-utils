{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "lib": ["DOM", "ES2022"],
    "moduleResolution": "NodeNext",
    "allowJs": true,                         // âœ… Allow .js files
    "checkJs": false,                        // Or true if you want type-checking on .js
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist/types",          // Separate types output
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.test.js"]
}
